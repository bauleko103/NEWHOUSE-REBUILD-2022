@model NEWHOUSE_REBUILD_2022.Models.KTS_DUAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
 
 
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid p-md-4">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">QUẢN LÝ KTS - DỰ ÁN</h1>
            </div>

            <div class="">
                @using (Html.BeginForm("Create", "AdminKTS_DUANs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.ValidationSummary(true)

                    <div class="col-xl-12 col-md-12 mb-12">
                        <div class="card  shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-12 p-4">


                                        <style>
                                            .HinhAnhDuAn {
                                                height: 10vh;
                                                width: auto;
                                            }

                                            .HinhAnhFeature {
                                                height: 20vh;
                                                width: auto;
                                            }
                                        </style>

                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                           DỰ ÁN
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.DropDownList("IDDuan", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.IDDuan, "", new { @class = "text-danger" })
                                        </div>
                                        <Br />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            KIẾN TRÚC SƯ
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.DropDownList("IDKTS", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.IDKTS, "", new { @class = "text-danger" })
                                        </div>
                                        <Br />
                                         

                                        <div class="col mr-12 p-4" style="display:flex; justify-content: flex-end;">
                                            <button type="submit" class="btn button-crud" value="Save">
                                                Tạo
                                            </button>
                                            <a class="btn btn-back" href="@Url.Action("Index")">
                                                Trở về
                                            </a>
                                        </div>
                                    </div>





                                </div>
                            </div>
                        </div>


                        <!-- Tổng dự án Card Example -->



                    </div>


                }
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <!-- End of Footer -->

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}