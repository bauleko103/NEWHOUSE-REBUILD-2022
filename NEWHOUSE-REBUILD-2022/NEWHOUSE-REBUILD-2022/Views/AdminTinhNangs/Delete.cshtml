@model NEWHOUSE_REBUILD_2022.Models.TinhNang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid p-md-4">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Tính năng</h1>
            </div>

            <div class="row" style="justify-content:center;text-align:center;height:70vh">
                @using (Html.BeginForm("Delete", "AdminTinhNangs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.ValidationSummary(true)

                    <div class="col-md-12 mb-12" style="margin-top:20vh">
                        <div class="card  shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-4 p-4">

                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1" style="font-size:25px">
                                            BẠN CÓ CHẮC MUỐN XÓA KHÔNG ?
                                        </div>

                                        <div class="form-actions no-color" style="display:flex; justify-content:center">
                                            <button type="submit" class="btn btn-delete" value="Delete">
                                                Xóa
                                            </button>
                                            <a class="btn btn-back" href="@Url.Action("Index")">
                                                Hủy
                                            </a>
                                        </div>


                                    </div>

                                </div>





                            </div>
                        </div>
                    </div>

                }
                <!-- Tổng dự án Card Example -->



            </div>



        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <!-- End of Footer -->

</div>
