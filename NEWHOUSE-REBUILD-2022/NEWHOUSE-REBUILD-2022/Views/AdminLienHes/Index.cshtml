@model IEnumerable<NEWHOUSE_REBUILD_2022.Models.LienHe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid" style="margin-top:4rem">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800"> Liên hệ</h1>
            <p class="mb-4"></p>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">


                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>

                                    <th>Map</th>


                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Mail</th>
                                    <th>Thông tin</th>
                                    <th>SỬA</th>

                                </tr>
                            </thead>

                            <tfoot>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <th>@item.Map</th>
                                    <th>@item.DiaChi</th>
                                    <th>@item.SoDienThoai</th>
                                    <th>@item.Mail</th>

                                    <th>@item.ThongTin</th>

                                    <th>
                                        <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning btn-circle">
                                            <i class="far fa-edit"></i>
                                        </a>
                                    </th>
                                  

                                </tr>


                                }

                            </tfoot>
                          


                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>


</div>