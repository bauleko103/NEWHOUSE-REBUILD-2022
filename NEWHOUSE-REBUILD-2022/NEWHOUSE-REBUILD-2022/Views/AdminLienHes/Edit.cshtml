@model NEWHOUSE_REBUILD_2022.Models.LienHe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid p-md-4">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Liên hệ</h1>
            </div>

            <div class=" ">
                @using (Html.BeginForm("Edit", "AdminLienHes", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.ValidationSummary(true)

                    <div class="col-xl-12 col-md-12 mb-12">
                        <div class="card  shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-12 p-4">




                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            MAP
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.Map, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Map, "", new { @class = "text-danger" })
                                        </div>
                                        <Br />

                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Địa chỉ
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                        </div>
                                        <Br />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Số điện thoại
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                        </div>
                                        <Br />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Mail
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                                        </div>
                                        <Br />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Thông tin
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.ThongTin, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ThongTin, "", new { @class = "text-danger" })
                                        </div>
                                        <Br />
                                        <div class="col mr-12 p-4" style="display:flex; justify-content: flex-end;">
                                            <button type="submit" class="btn button-crud" value="Save">
                                                Lưu
                                            </button>
                                            <a class="btn btn-back" href="@Url.Action("Index")">
                                                Trở về
                                            </a>
                                        </div>
                                    </div>





                                </div>
                            </div>
                        </div>


                        <!-- Tổng dự án Card Example -->



                    </div>


                }
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <!-- End of Footer -->

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}