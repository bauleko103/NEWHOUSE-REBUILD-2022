@model IEnumerable<NEWHOUSE_REBUILD_2022.Models.DoiTac>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid" style="margin-top:4rem">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">ĐỐI TÁC</h1>
            <p class="mb-4"></p>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                 

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>

                                    <th>Tựa đề</th>


                                    <th>Link</th>
                                    <th>Hình</th>
                                    <th>SỬA</th>
                                    <th>XÓA</th>
                                </tr>
                            </thead>

                            <tfoot>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <th>@item.TuaDe</th>

                                        <th> @item.Link</th>

                                        <th style="text-align:center"><img src="~/Content/img/doitac/@item.Hinh" style="width:100px;height:auto" /> </th>

                                        <th>
                                            <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning btn-circle">
                                                <i class="far fa-edit"></i>
                                            </a>
                                        </th>
                                        <th>
                                            <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger btn-circle">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </th>

                                    </tr>


                                }

                            </tfoot>
                            <div>
                                <a class="button-crud" href="@Url.Action( "Create")">
                                    Thêm mới
                                </a>
                            </div>




                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
     

</div>