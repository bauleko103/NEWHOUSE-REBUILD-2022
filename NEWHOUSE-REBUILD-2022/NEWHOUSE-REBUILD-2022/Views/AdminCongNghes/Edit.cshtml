@model NEWHOUSE_REBUILD_2022.Models.CongNghe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
 

<script src="~/ContentAdmin/ckeditor/ckeditor.js"></script>



<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid p-md-4">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">SỬA CÔNG NGHỆ</h1>
            </div>

            <div class="row">
                @using (Html.BeginForm("Edit", "AdminCongNghes", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.ValidationSummary(true)

                    <div class="col-xl-12 col-md-12 mb-12">
                        <div class="card  shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-12 p-4">


                                        <style>
                                            .HinhAnhDuAn {
                                                height: 10vh;
                                                width: auto;
                                            }

                                            .HinhAnhFeature {
                                                height: 20vh;
                                                width: auto;
                                            }
                                        </style>
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Tựa Đề Chính
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.TuaDeChinh, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TuaDeChinh, "", new { @class = "text-danger" })
                                        </div>
                                        <br />

                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Trích dẫn
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.TextAreaFor(model => model.TrichDan, new { @id = "FullDescription", @class = "form-control", @rows = "200" })
                                            <script>
                                                CKEDITOR.replace("FullDescription");
                                            </script>
                                        </div>
                                        <hr />
                                        @*TỰA ĐỀ 1*@
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Tựa Đề 1.1
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.TuaDe11, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TuaDe11, "", new { @class = "text-danger" })
                                        </div>
                                        <br />

                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Nội dung 1.1
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.TextAreaFor(model => model.NoiDung11, new { @id = "FullDescription11", @class = "form-control", @rows = "200" })
                                            <script>
                                                CKEDITOR.replace("FullDescription11");
                                            </script>
                                        </div>
                                        <hr />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Tựa Đề 1.2
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.TuaDe12, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TuaDe12, "", new { @class = "text-danger" })
                                        </div>


                                        <br />

                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Nội dung 1.2
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.TextAreaFor(model => model.NoiDung12, new { @id = "FullDescription12", @class = "form-control", @rows = "200" })
                                            <script>
                                                CKEDITOR.replace("FullDescription12");
                                            </script>
                                        </div>
                                        <hr />
                                        @* HÌNH ẢNH 1*@
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Hình ảnh mục 1 (bắt buộc thêm hình ảnh dưới 1mb)
                                        </div>
                                        <div class="HinhAnhFeature">
                                            <img src="~/Content/img/congnghe/@Html.DisplayFor(model => model.Hinh1)" style="width:100px;height:auto" />
                                            <input type="file" id="uploadhinh1" name="uploadhinh1" accept="image/*" />

                                        </div>
                                        <hr />


                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Tựa Đề 2
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.EditorFor(model => model.TuaDe2, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TuaDe2, "", new { @class = "text-danger" })
                                        </div>


                                        <br />

                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Nội dung 2
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.TextAreaFor(model => model.NoiDung2, new { @id = "FullDescription2", @class = "form-control", @rows = "200" })
                                            <script>
                                                CKEDITOR.replace("FullDescription2");
                                            </script>
                                        </div>
                                        <hr />
                                        @* HÌNH ẢNH 1*@
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Hình ảnh mục 2 (bắt buộc thêm hình ảnh dưới 1mb)
                                        </div>
                                        <div class="HinhAnhFeature">
                                            <img src="~/Content/img/congnghe/@Html.DisplayFor(model => model.Hinh2)" style="width:100px;height:auto" />
                                            <input type="file" id="uploadhinh2" name="uploadhinh2" accept="image/*" />

                                        </div>
                                        <hr />
                                        <br />
                                        <div class="col mr-12 p-4" style="display:flex; justify-content: flex-end;">
                                            <button type="submit" class="btn button-crud" value="Save">
                                                Lưu
                                            </button>
                                            <a class="btn btn-back" href="@Url.Action("Index")">
                                                Trở về
                                            </a>
                                        </div>
                                    </div>





                                </div>
                            </div>
                        </div>


                        <!-- Tổng dự án Card Example -->



                    </div>


                }
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <!-- End of Footer -->

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}