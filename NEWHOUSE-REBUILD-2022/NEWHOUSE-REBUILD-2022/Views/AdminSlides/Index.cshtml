@model IEnumerable<NEWHOUSE_REBUILD_2022.Models.Slide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 
 
 
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!--<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">-->
        <!-- Sidebar Toggle (Topbar) -->
        <!--<button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
        </button>-->
        <!-- Topbar Navbar -->
        <!--</nav>-->
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid" style="margin-top:4rem">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Slide</h1>
            <p class="mb-4"></p>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Tất cả hình slide</h6>
                </div>
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Số thứ tự</th>
                                    <th>Tựa đề chính</th>
                                    <th>Tựa đề phụ</th>
                                    <th>Hình</th>
                                     
                                    <th>SỬA</th>
                                    <th>XÓA</th>
                                </tr>
                            </thead>
                            <tfoot>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.SoThuTu</th>
                                        <th>@item.TuaDe</th>
                                        <th>@item.TuaDePhu</th>
                                        <th style="text-align:center"><img src="~/Content/img/@item.Hinh" style="width:100px;height:auto" /> </th>


                                        <th>
                                            <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning btn-circle">
                                                <i class="far fa-edit"></i>
                                            </a>
                                        </th>
                                        <th>
                                            <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger btn-circle">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </th>
                                    </tr>

                                }
                            </tfoot>
                            @*<a href="@Html.ActionLink("ADD", "ADD_DUAN" )"></a>*@
                            <div>
                                <a class="button-crud" href="@Url.Action( "Create")">
                                    Thêm mới
                                </a>
                            </div>

                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <!--<footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2019</span>
            </div>
        </div>
    </footer>-->
    <!-- End of Footer -->

</div>
