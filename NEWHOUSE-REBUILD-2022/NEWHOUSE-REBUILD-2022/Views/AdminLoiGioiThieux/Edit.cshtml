@model NEWHOUSE_REBUILD_2022.Models.LoiGioiThieu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/ContentAdmin/ckeditor/ckeditor.js"></script>



<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid p-md-4">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">sửa giới thiệu</h1>
            </div>

            <div class="col-lg-12">
                @using (Html.BeginForm("Edit", "AdminLoiGioiThieux", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    @Html.ValidationSummary(true)

                    <div class="col-xl-12 col-md-12 mb-12">
                        <div class="card  shadow h-100 py-2">
                            <div class="card-body">
                                <div class="col-12 no-gutters align-items-center">
                                    <div class="col-lg-12 p-4">



                                       
                                        <br />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Nội dung giới thiệu SẢN PHẨM
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.TextAreaFor(model => model.GioiThieuSanPham, new { @id = "FullDescription", @class = "form-control", @rows = "20" })
                                            <script>
                                                CKEDITOR.replace("FullDescription1");
                                            </script>
                                        </div>
                                        <br />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Nội dung giới thiệu TÍNH NĂNG
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.TextAreaFor(model => model.GioiThieuTinhNang, new { @id = "FullDescription", @class = "form-control", @rows = "20" })
                                            <script>
                                                CKEDITOR.replace("FullDescription2");
                                            </script>
                                        </div>
                                        <br />
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Nội dung giới thiệu KIẾN TRÚC SƯ
                                        </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">

                                            @Html.TextAreaFor(model => model.GioiThieuKTS, new { @id = "FullDescription", @class = "form-control", @rows = "20" })
                                            <script>
                                                CKEDITOR.replace("FullDescription3");
                                            </script>
                                        </div>
                                        <div class="col mr-12 p-4" style="display:flex; justify-content: flex-end;">
                                            <button type="submit" class="btn button-crud" value="Save">
                                                Lưu
                                            </button>
                                            <a class="btn btn-back" href="@Url.Action("Index")">
                                                Trở về
                                            </a>
                                        </div>
                                    </div>





                                </div>
                            </div>
                        </div>


                        <!-- Tổng dự án Card Example -->



                    </div>


                }
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <!-- End of Footer -->

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}